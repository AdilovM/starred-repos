@import '../../utils/styleConstants.pcss';

.chartContainer {
	display: flex;
}

.chartFullWidth {
	width: calc(100% + $chart-full-width-change);
}

.chartWithSegment {
	width: calc(100% - 192px);
}

.chart {
	align-items: center;
	padding: 16px 0 0 0;
}

.withoutPadding {
	padding: 0;
}

.main {
	position: relative;
	display: block;
}

.chartFullHeight {
	height: 350px;
}

.chartReducedHeight {
	height: 98px;
}
